FROM composer:1.6.4
MAINTAINER Gearbox Team <team@gearbox.works>

RUN apk update && \
	apk add --no-cache bash shadow && \
	groupadd -g 1000 gearbox && \
	mkdir /var/mail && \
	useradd -d /var/cache/nginx -c "Gearbox user" -u 1000 -g 1000 -N -s /bin/bash gearbox

COPY gearbox.json /etc/gearbox.json
COPY files /
